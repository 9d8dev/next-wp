WORDPRESS_URL="https://wordpress.com"
WORDPRESS_LOGIN_URL="https://wordpress.com/wp-login.php?wp-next-hb-token=manager"
WORDPRESS_REST_API_ENDPOINT="https://wordpress.com/wp-json"

# Frontend site URL - used for URL rewriting in WordPress content
# Replaces WordPress domain with this URL in links and plain text
# Example: https://wordpress.com/about-us -> https://my-frontend.com/about-us
SITE_URL="https://my-frontend.com"

# If using the revalidate plugin
# You can generate by running `openssl rand -base64 32` in the terminal
WORDPRESS_WEBHOOK_SECRET="your-secret-key-here"
