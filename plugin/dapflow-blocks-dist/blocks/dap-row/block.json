{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "dap/row",
  "title": "Row",
  "category": "dapflow",
  "icon": "align-wide",
  "description": "Horizontal arrangement of blocks with responsive controls",
  "keywords": ["row", "horizontal", "layout", "flex"],
  "supports": {
    "html": false,
    "align": ["wide", "full"],
    "anchor": true,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "gap": {
      "type": "object",
      "default": {
        "mobile": "gap-4",
        "tablet": "gap-6",
        "desktop": "gap-8"
      }
    },
    "align": {
      "type": "string",
      "default": "start"
    },
    "justify": {
      "type": "string",
      "default": "start"
    },
    "wrap": {
      "type": "boolean",
      "default": true
    },
    "maxWidth": {
      "type": "string",
      "default": "85rem"
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./style.css"
}
